<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:weightSum="215">

    <!--빈공간-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25"/>

    <!--로고-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:contentDescription="@string/logo"
        app:srcCompat="@drawable/logo_"/>

    <!--빈공간-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="18"/>

    <!--이메일 입력-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14"
        android:weightSum="100"
        android:gravity="center">

        <EditText
            android:id="@+id/loginEmail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="80"
            android:hint="@string/email_hint"
            android:textColorHint="#9ABCDE"
            android:importantForAutofill="no"
            android:textSize="15sp"
            android:backgroundTint="#1B68B4"
            android:inputType="textEmailAddress"
            tools:ignore="NestedWeights" />

    </LinearLayout>

    <!--비밀번호 입력-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14"
        android:weightSum="100"
        android:gravity="center">

        <EditText
            android:id="@+id/loginPass"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="80"
            android:hint="@string/pass_hint"
            android:textColorHint="#9ABCDE"
            android:importantForAutofill="no"
            android:textSize="15sp"
            android:backgroundTint="#1B68B4"
            android:inputType="textPassword"
            tools:ignore="NestedWeights" />

    </LinearLayout>

    <!--빈공간-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"/>

    <!--패스워드 찾기-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:weightSum="100"
        android:gravity="center">

        <TextView
            android:id="@+id/gotoResetpass"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="80"
            android:text="@string/resert_pass"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="end"
            tools:ignore="NestedWeights,UnusedAttribute" />

    </LinearLayout>

    <!--빈공간-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"/>

    <!--로그인버튼-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:weightSum="100"
        android:gravity="center"
        android:baselineAligned="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="80"
            tools:ignore="NestedWeights">

            <Button
                android:id="@+id/logIn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/login"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:background="@drawable/button_login"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_baseline_login_24"
                app:layout_constraintLeft_toLeftOf="@+id/logIn"
                app:layout_constraintTop_toTopOf="@+id/logIn"
                app:layout_constraintBottom_toBottomOf="@+id/logIn"
                android:layout_marginStart="20dp"
                android:translationZ="2dp"
                tools:ignore="ContentDescription" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <!--빈공간-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="41"/>

    <!--멘트-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:weightSum="100"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="90"
            android:text="@string/login_ment"
            android:textColor="#959598"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="center"
            tools:ignore="NestedWeights" />

    </LinearLayout>

    <!--빈공간-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>

    <!--회원가입하러가기-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:weightSum="100"
        android:gravity="center">

        <TextView
            android:id="@+id/gotoSignup"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="90"
            android:text="@string/gotosignup"
            android:textStyle="bold"
            android:textColor="#959598"
            android:textSize="12sp"
            android:gravity="center"
            tools:ignore="NestedWeights" />

    </LinearLayout>

</LinearLayout>-0