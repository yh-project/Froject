<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/inputContentTitle"
        android:layout_width="80.4dp"
        android:layout_height="21.9dp"
        android:text="모집 내용"
        android:textSize="10.2sp"
        android:background="@drawable/borderline_post"
        android:textColor="#070304"
        android:fontFamily="@font/nanumsquareroundb"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/inputContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="내용"
        android:textColor="#2a3448"
        android:fontFamily="@font/nanumsquareroundr"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="start"
        android:textSize="10.5sp"
        android:lineSpacingExtra="2.1sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputContentTitle" />

    <TextView
        android:id="@+id/mentPlace"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="장소  :  "
        android:textColor="#2a3448"
        android:fontFamily="@font/nanumsquareroundr"
        android:textSize="10.5sp"
        android:gravity="start"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/inputContent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/place"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textColor="#2a3448"
        android:fontFamily="@font/nanumsquareroundr"
        android:gravity="start"
        android:paddingTop="10dp"
        android:layout_marginTop="10dp"
        android:textSize="10.5sp"
        app:layout_constraintTop_toBottomOf="@+id/inputContent"
        app:layout_constraintLeft_toRightOf="@+id/mentPlace" />

    <TextView
        android:id="@+id/mentPeriod"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="기간  :  "
        android:textColor="#2a3448"
        android:fontFamily="@font/nanumsquareroundr"
        android:gravity="start"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:textSize="10.5sp"
        app:layout_constraintTop_toBottomOf="@+id/mentPlace"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/period"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textColor="#2a3448"
        android:fontFamily="@font/nanumsquareroundr"
        android:gravity="start"
        android:paddingTop="10dp"
        android:textSize="10.5sp"
        app:layout_constraintTop_toBottomOf="@+id/place"
        app:layout_constraintLeft_toRightOf="@+id/mentPeriod" />

    <TextView
        android:id="@+id/mentCount"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="구인 수  :  "
        android:textColor="#2a3448"
        android:fontFamily="@font/nanumsquareroundr"
        android:gravity="start"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:textSize="10.5sp"
        app:layout_constraintTop_toBottomOf="@+id/mentPeriod"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/totalCount"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textColor="#2a3448"
        android:fontFamily="@font/nanumsquareroundr"
        android:gravity="start"
        android:paddingTop="10dp"
        android:textSize="10.5sp"
        app:layout_constraintTop_toBottomOf="@+id/period"
        app:layout_constraintLeft_toRightOf="@+id/mentCount" />


</androidx.constraintlayout.widget.ConstraintLayout>