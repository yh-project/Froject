<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80.6dp"
    android:background="@drawable/postlist_border"
    android:layout_marginBottom="8.7dp">

    <ImageView
        android:id="@+id/postimage"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/profile_image"
        android:layout_marginTop="11.9dp"
        android:layout_marginStart="10.1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/posttitle"
        android:layout_width="205.8dp"
        android:layout_height="wrap_content"
        android:text="앱 개발 공모전 참가하실 디자이너/개발자 구합니다"
        android:textColor="#2a3448"
        android:textSize="12sp"
        android:lineSpacingExtra="2.4sp"
        android:fontFamily="@font/nanumsquareroundb"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/postimage"
        android:layout_marginStart="11.6dp"
        android:layout_marginTop="16.4dp" />

    <ImageView
        android:id="@+id/threeDot"
        android:layout_width="2dp"
        android:layout_height="10dp"
        android:src="@drawable/three_dot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="18.5dp"
        android:layout_marginTop="17.2dp"/>

    <ImageView
        android:id="@+id/like"
        android:layout_width="13.1dp"
        android:layout_height="12.5dp"
        android:src="@drawable/unstar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="11.9dp"/>

    <TextView
        android:id="@+id/uploadtime1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1개월"
        android:textSize="9.5sp"
        android:textColor="#2a3448"
        android:lineSpacingExtra="1.9sp"
        android:fontFamily="@font/nanumsquareroundb"
        app:layout_constraintStart_toStartOf="@+id/posttitle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="12.8dp"/>

    <TextView
        android:id="@+id/uploadtime2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="도레미"
        android:textSize="9.5sp"
        android:textColor="#2a3448"
        android:lineSpacingExtra="1.9sp"
        android:fontFamily="@font/nanumsquareroundb"
        app:layout_constraintStart_toEndOf="@+id/uploadtime1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="12.8dp"
        android:layout_marginStart="20dp"/>

