<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="250">

    <!--탑바-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:weightSum="130"
        android:gravity="center">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:background="#ffffff"
            android:src="@drawable/item_back_button" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="35" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:src="@drawable/logo_" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="35" />

        <ImageButton
            android:id="@+id/search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:background="#ffffff"
            android:src="@drawable/ic_baseline_search_24" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="#F1F2F4" />

    <!--큰카테고리-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:weightSum="130"
        android:gravity="center">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bigcategoryRecyclerView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="110">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

    <!--작은카테고리-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:weightSum="130"
        android:background="#F1F2F4"
        android:gravity="center"
        android:layout_marginTop="-5dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/smallcategoryRecyclerView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="110" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/boardRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="200" />

</LinearLayout>