<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="83.2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="43.2dp"
        android:layout_height="43.2dp"
        android:src="@drawable/profile_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="22.5dp"
        android:layout_marginStart="31dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/msg_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/icl_name"
        android:textColor="#2a3448"
        android:textSize="16sp"
        android:fontFamily="@font/nanumsquareroundb"
        android:lineSpacingExtra="3.2sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/profileImage"
        android:layout_marginTop="21.2dp"
        android:layout_marginStart="14.3dp"/>

    <TextView
        android:id="@+id/linkedPostTitle"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="@string/icl_title"
        android:textColor="#7c7c7b"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="@+id/msg_name"
        app:layout_constraintBottom_toBottomOf="@+id/msg_name"
        app:layout_constraintStart_toEndOf="@+id/msg_name"
        android:layout_marginStart="14.1dp"/>

    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/icl_time"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="33.7dp"/>

    <TextView
        android:id="@+id/msg_item"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/icl_item"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="#2a3448"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/profileImage"
        app:layout_constraintStart_toEndOf="@+id/profileImage"
        android:layout_marginStart="16.8dp"/>

    <TextView
        android:id="@+id/noReadCount"
        android:layout_width="13.2dp"
        android:layout_height="13.2dp"
        android:text="@string/icl_unread"
        android:textColor="#ffffff"
        android:textSize="10sp"
        android:gravity="center"
        android:background="@drawable/unread_message"
        app:layout_constraintEnd_toEndOf="@+id/timestamp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="18dp"
        tools:ignore="SmallSp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e2e2e4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


