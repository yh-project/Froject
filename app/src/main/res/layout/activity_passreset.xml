<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:weightSum="250"
    android:orientation="vertical">

    <!--빈공간-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60" />

    <!--로고-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:contentDescription="@string/logo"
        app:srcCompat="@drawable/real_logo" />

    <!--빈공간-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20" />

    <!--이메일 입력-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:weightSum="130"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            android:id="@+id/useEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="110"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:ems="10"
            android:textSize="15sp"
            android:hint="@string/putemail"
            android:textColorHint="#B1B1B1"
            android:fontFamily="@font/nanumsquareroundeb"
            android:backgroundTint="#C0C0C0"
            android:inputType="textEmailAddress"
            android:importantForAutofill="no"
            tools:ignore="NestedWeights" />

    </LinearLayout>

    <!--확인 버튼-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal"
        android:weightSum="130"
        android:gravity="center|bottom">

        <Button
            android:id="@+id/sendEmail"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="110"
            android:text="@string/sendmail"
            android:textColor="#ffffff"
            android:fontFamily="@font/nanumsquareroundb"
            android:background="@drawable/borderline_button_5768c3"
            tools:ignore="NestedWeights" />

    </LinearLayout>

</LinearLayout>