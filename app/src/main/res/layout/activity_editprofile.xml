<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="250"
    android:background="#ffffff">

    <!--탑바-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:weightSum="130"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:src="@drawable/cancel"
            android:padding="10dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="90"
            android:gravity="center"
            android:text="프로필 수정"
            android:textColor="#5768C0"
            android:textSize="15sp"
            android:fontFamily="@font/nanumsquareroundb" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="#e7e8ea"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5" />

    <!--프로필 사진-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="65"
        android:weightSum="130"
        android:gravity="center">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:src="@drawable/profile_image"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"/>

    </LinearLayout>

    <!--이름-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="23"
        android:weightSum="130"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:orientation="vertical"
            android:weightSum="23">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:paddingStart="15dp"
                android:gravity="center_vertical"
                android:text="성"
                android:textColor="#5768C0"
                android:textSize="12sp"
                android:fontFamily="@font/nanumsquareroundb"/>

            <EditText
                android:id="@+id/firstName"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="13"
                android:background="@drawable/borderline_textbox_dee2e5"
                android:paddingStart="15dp"
                android:hint="성"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:textSize="13sp"
                android:fontFamily="@font/nanumsquareroundb" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:orientation="vertical"
            android:weightSum="23">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:paddingStart="15dp"
                android:gravity="center_vertical"
                android:text="이름"
                android:textColor="#5768C0"
                android:textSize="12sp"
                android:fontFamily="@font/nanumsquareroundb"/>

            <EditText
                android:id="@+id/secondName"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="13"
                android:background="@drawable/borderline_textbox_dee2e5"
                android:paddingStart="15dp"
                android:hint="이름"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:textSize="13sp"
                android:fontFamily="@font/nanumsquareroundb" />

        </LinearLayout>

    </LinearLayout>

    <!--학교-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="23"
        android:orientation="horizontal"
        android:weightSum="130"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="110"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:paddingStart="15dp"
                android:gravity="center_vertical"
                android:text="학교"
                android:textColor="#5768C0"
                android:textSize="12sp"
                android:fontFamily="@font/nanumsquareroundb"/>

            <EditText
                android:id="@+id/newUniv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="13"
                android:background="@drawable/borderline_textbox_dee2e5"
                android:paddingStart="15dp"
                android:hint="이름"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:textSize="13sp"
                android:fontFamily="@font/nanumsquareroundb" />

        </LinearLayout>

    </LinearLayout>

    <!--학년-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="23"
        android:weightSum="130"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="110"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:paddingStart="15dp"
                android:gravity="center_vertical"
                android:text="학년"
                android:textColor="#5768C0"
                android:textSize="12sp"
                android:fontFamily="@font/nanumsquareroundb"/>

            <Spinner
                android:id="@+id/newLevel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="13"
                android:background="@drawable/item_spinner_editprofile"
                android:paddingStart="15dp"
                android:textColor="#000000"
                android:textSize="13sp"
                android:fontFamily="@font/nanumsquareroundb" />

        </LinearLayout>

    </LinearLayout>

    <!--전공-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="23"
        android:orientation="horizontal"
        android:weightSum="130"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="110"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:paddingStart="15dp"
                android:gravity="center_vertical"
                android:text="전공"
                android:textColor="#5768C0"
                android:textSize="12sp"
                android:fontFamily="@font/nanumsquareroundb"/>

            <EditText
                android:id="@+id/newMajor"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="13"
                android:background="@drawable/borderline_textbox_dee2e5"
                android:paddingStart="15dp"
                android:hint="전공"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:textSize="13sp"
                android:fontFamily="@font/nanumsquareroundb" />

        </LinearLayout>

    </LinearLayout>

    <!--view-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="48" />

    <!--수정완료-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="130"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/changeInfo"
            android:layout_width="0dp"
            android:layout_weight="110"
            android:layout_height="match_parent"
            android:background="@drawable/borderline_button_e7e8ea"
            android:text="확인"
            android:textColor="#858585"
            android:fontFamily="@font/nanumsquareroundeb"/>

    </LinearLayout>

</LinearLayout>