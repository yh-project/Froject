<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="250"
    android:background="#ffffff">

    <!--탑바-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:weightSum="130"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:src="@drawable/item_back_button"
            android:background="#ffffff" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="90"
            android:src="@drawable/logo_" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10" />

    <!--이름 or 닉네임-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:weightSum="130"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="110"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="이름 or 닉네임"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/originalName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="원래이름"
                    android:layout_marginLeft="20dp"/>

            </LinearLayout>

            <EditText
                android:id="@+id/newName"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:inputType="textPersonName"
                android:hint="새로운 이름 or 닉네임을 입력하세요."
                android:textColorHint="#BFBFBF"
                android:textAlignment="center"
                android:textSize="15sp"
                android:backgroundTint="#F1F2F4" />

        </LinearLayout>

    </LinearLayout>

    <!--전공-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:weightSum="130"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="110"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="전공"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/originalMajor"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="원래전공"
                    android:layout_marginLeft="20dp" />

            </LinearLayout>

            <EditText
                android:id="@+id/newMajor"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:inputType="textPersonName"
                android:hint="새로운 전공을 입력하세요."
                android:textColorHint="#BFBFBF"
                android:textAlignment="center"
                android:textSize="15sp"
                android:backgroundTint="#F1F2F4" />

        </LinearLayout>

    </LinearLayout>

    <!--학년-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:weightSum="130"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="110"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="학년"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/originalLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:text="원래학년"/>

            </LinearLayout>

            <EditText
                android:id="@+id/newLevel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:inputType="number"
                android:hint="학년을 입력해주세요."
                android:textColorHint="#BFBFBF"
                android:textAlignment="center"
                android:textSize="15sp"
                android:backgroundTint="#F1F2F4" />

        </LinearLayout>

    </LinearLayout>

    <!--대학-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:weightSum="130"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="110"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="대학"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/originalUniv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:text="원래대학" />

            </LinearLayout>

            <EditText
                android:id="@+id/newUniv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:inputType="textPersonName"
                android:hint="대학을 입력해주세요."
                android:textColorHint="#BFBFBF"
                android:textAlignment="center"
                android:textSize="15sp"
                android:backgroundTint="#F1F2F4" />

        </LinearLayout>

    </LinearLayout>

    <!--수정완료-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="130"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/changeInfo"
            android:layout_width="0dp"
            android:layout_weight="110"
            android:layout_height="match_parent"
            android:background="@drawable/borderline_button"
            android:text="수정 완료"
            android:textColor="#ffffff" />

    </LinearLayout>

    <!--비번 재설정 삭제예정-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="130"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/newPass"
            android:layout_width="0dp"
            android:layout_weight="110"
            android:layout_height="match_parent"
            android:background="@drawable/borderline_button"
            android:text="비밀번호 재설정"
            android:textColor="#ffffff" />

    </LinearLayout>

</LinearLayout>