<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/finishwrite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="18dp"
        android:clickable="true"
        app:srcCompat="@android:drawable/ic_input_add" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logo_" />

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="60dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="57dp"
                        android:layout_height="50dp"
                        android:text="제목"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/inputtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="제목을 입력해주세요" />

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="57dp"
                        android:layout_height="50dp"
                        android:text="기간"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/inputdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="기간을 입력해주세요" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/people"
                        android:layout_width="110dp"
                        android:layout_height="50dp"
                        android:text="모집인원"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/inputpeople"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="모집인원을 입력해주세요" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/field"
                        android:layout_width="57dp"
                        android:layout_height="50dp"
                        android:text="분야"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/inputfield"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="분야를 입력해주세요" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/place"
                        android:layout_width="57dp"
                        android:layout_height="50dp"
                        android:text="장소"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/inputplace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="장소를 입력해주세요" />
                </TableRow>

            </TableLayout>
            <EditText
                android:id="@+id/inputcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="자세한 설명을 해주세요." />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>