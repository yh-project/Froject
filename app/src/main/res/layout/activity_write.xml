<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="250"
    android:background="#ffffff">

    <!--탑바-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:weightSum="130"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            tools:ignore="NestedWeights" />

        <TextView
            android:id="@+id/cancelWriting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="닫기"
            android:textColor="#909090"
            android:fontFamily="@font/nanumsquareroundb"
            android:gravity="center" />
    </LinearLayout>

    <!--빈공간-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="#EAEBED" />

    <!--메인콘텐츠-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="209"
        android:weightSum="130"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:paddingTop="10dp">

        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="110"
            android:fillViewport="true"
            tools:ignore="NestedWeights">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/inputTitle"
                    android:layout_width="match_parent"
                    android:layout_height="49.5dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:backgroundTint="@android:color/transparent"
                    android:hint="제목"
                    android:textColorHint="#B7B7B7"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:fontFamily="@font/nanumsquareroundeb"
                    android:textAlignment="viewStart" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#EAEBED" />

                <EditText
                    android:id="@+id/inputPlace"
                    android:layout_width="match_parent"
                    android:layout_height="49.5dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:backgroundTint="@android:color/transparent"
                    android:hint="장소"
                    android:textColorHint="#B7B7B7"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:fontFamily="@font/nanumsquareroundeb"
                    android:textAlignment="viewStart" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#EAEBED" />
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="49.5dp"
                    android:weightSum="110"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/inputPeriod"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="80"
                        android:paddingLeft="5dp"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="기간"
                        android:textColorHint="#B7B7B7"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:fontFamily="@font/nanumsquareroundeb"
                        android:textAlignment="viewStart" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="20"
                        android:text="협의 가능"
                        android:textColor="#B7B7B7"
                        android:textSize="12sp"
                        android:fontFamily="@font/nanumsquareroundeb"
                        android:gravity="end|center_vertical" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="10"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <CheckBox
                            android:id="@+id/checkperiod"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:button="@null"
                            android:background="@drawable/item_checkbox_custom"/>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#EAEBED" />

                <EditText
                    android:id="@+id/inputContent"
                    android:layout_width="match_parent"
                    android:layout_height="49.5dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:backgroundTint="@android:color/transparent"
                    android:hint="내용"
                    android:textColorHint="#B7B7B7"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:fontFamily="@font/nanumsquareroundeb"
                    android:textAlignment="viewStart" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#EAEBED" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="49.5dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:weightSum="110"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="40"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="20"
                            android:text="대외활동"
                            android:textColor="#B7B7B7"
                            android:textSize="12sp"
                            android:fontFamily="@font/nanumsquareroundeb"
                            android:gravity="right|center_vertical" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="10"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <CheckBox
                                android:id="@+id/checkinternational"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:button="@null"
                                android:background="@drawable/item_checkbox_custom"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="40"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="20"
                            android:text="봉사활동"
                            android:textColor="#B7B7B7"
                            android:textSize="12sp"
                            android:fontFamily="@font/nanumsquareroundeb"
                            android:gravity="right|center_vertical" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="10"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <CheckBox
                                android:id="@+id/checkvolunteer"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:button="@null"
                                android:background="@drawable/item_checkbox_custom"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#EAEBED" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="49.5dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/just_ment"
                        android:layout_width="0dp"
                        android:layout_height="49.5dp"
                        android:paddingLeft="10dp"
                        app:layout_constraintHorizontal_weight="0.7"
                        android:hint="구인 수"
                        android:textColor="#000000"
                        android:fontFamily="@font/nanumsquareroundeb"
                        android:gravity="center_vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/minus"/>

                    <ImageButton
                        android:id="@+id/minus"
                        android:layout_width="0dp"
                        android:layout_height="49.5dp"
                        app:layout_constraintHorizontal_weight="0.1"
                        android:src="@drawable/item_remove_contents"
                        android:background="#ffffff"
                        android:visibility="invisible"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/totalCount"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/just_ment"/>

                    <TextView
                        android:id="@+id/totalCount"
                        android:layout_width="0dp"
                        android:layout_height="49.5dp"
                        app:layout_constraintHorizontal_weight="0.1"
                        android:text="1"
                        android:textColor="#5768C3"
                        android:textSize="15sp"
                        android:fontFamily="@font/nanumsquareroundeb"
                        android:gravity="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/plus"
                        app:layout_constraintLeft_toRightOf="@+id/minus" />

                    <ImageButton
                        android:id="@+id/plus"
                        android:layout_width="0dp"
                        android:layout_height="49.5dp"
                        app:layout_constraintHorizontal_weight="0.1"
                        android:visibility="invisible"
                        android:src="@drawable/item_add_contents"
                        android:background="#ffffff"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/totalCount"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#EAEBED" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/categoryContentRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <!--빈공간-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="#EAEBED" />

    <!--완료버튼-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:weightSum="130"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/finishcontents"
            android:layout_width="0dp"
            android:layout_weight="110"
            android:layout_height="match_parent"
            android:text="작성 완료"
            android:textColor="#ffffff"
            android:fontFamily="@font/nanumsquareroundeb"
            android:background="@drawable/borderline_button_5768c3"/>

    </LinearLayout>

</LinearLayout>